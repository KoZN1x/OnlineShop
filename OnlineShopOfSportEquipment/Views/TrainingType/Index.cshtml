@model ICollection<TrainingType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Training Type List</h2>
        </div>
        <div class="w-50 col-6 text-right">
            <a asp-controller="TrainingType" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Create New Training Type
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Training Type Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td class="text-right">
                            <div class="w-25 btn-group" role="group">
                                <a asp-controller="TrainingType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2 w-50" >
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="TrainingType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2 w-50">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No training type exist.</p>
    }

</div>


