@model OnlineShopOfSportEquipment_Models.ViewModels.OrderListViewModel
@using Syncfusion.EJ2
<div>
    <ejs-grid id="Grid" dataSource="@Model.OrderHeaderList" allowFiltering="true" allowSorting="true" allowPaging="true">
        <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
        <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
        <e-grid-selectionsettings persistSelection="true" type="Multiple" checkboxOnly="true"></e-grid-selectionsettings>
        <e-grid-columns>
            <e-grid-column field="Id" headerText="ID" isPrimaryKey="true" textAlign="Right" width="100"></e-grid-column>
            <e-grid-column field="Email" headerText="Email" isPrimaryKey="true" textAlign="Right"></e-grid-column>
            <e-grid-column field="PhoneNumber" headerText="Phone Number" isPrimaryKey="true" textAlign="Right"></e-grid-column>
            <e-grid-column field="OrderDate" customFormat="@(new { type = "date", format = "dd/MM/yyyy HH:mm"})" headerText="Order Date" isPrimaryKey="true" textAlign="Right"></e-grid-column>
            <e-grid-column field="OrderStatus" headerText="Order Status" isPrimaryKey="true" textAlign="Right"></e-grid-column>
            <e-grid-column field="City" headerText="Address" isPrimaryKey="true" textAlign="Right"></e-grid-column>
            <e-grid-column field="Id" headerText="" width="70"
            template="<a rel='nofollow' href='Order/Details/${Id}' class='btn btn-primary'> <i class='fa fa-list'></i></a> ">
            </e-grid-column>
        </e-grid-columns>
    </ejs-grid>
</div>