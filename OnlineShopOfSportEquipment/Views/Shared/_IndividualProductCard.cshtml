@model Product
@using OnlineShopOfSportEquipment_Utility
<div class="col-lg-4 cold-md-6 pb-4 filter @Model.Category!.Name!.Replace(' ', '_')">
    <!--Card-->
    <div class="card bg-white rounded shadow-sm" style="height:40vw; border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row" style="height: 10%">
            <div class="col-sm">
                <label class="float-start">@Model.Name</label>
            </div>
            <div class="col-4">
                @if (Model.CountInStock > 0)
                {
                    <label class="align-content-center text-info h-100">In stock</label>
                }
                else
                {
                    <label class="align-content-center text-danger h-100">Not available</label>
                }
            </div>
            <div class="col-sm">
                <label class="float-end">
                    <span class="text-info h5">@string.Format("{0:c0}", @Model.Price) </span>
                </label>
            </div>
        </div>

        <div class="card-body" style="height:70%;">
            <img class="card-img-top img-fluid d-block mx-auto mb-3" style="height:auto; max-width: 100%" src="@WC.ImagePath@Model.Image" alt="Card image cap" />
        </div>
        
        <div class="card-body p-1 px-3 row" style="height:20%">
            <div class="col-6">
                <span class="badge p-2 border w-100 text-primary" style="background-color:lavenderblush">@Model.Category!.Name</span>
            </div>
            <div class="col-6 border-0">
                <span class="badge p-2 border w-100 text-secondary" style="background-color:aliceblue">@Model.TrainingType!.Name</span>
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                <p>@Model.ShortDescription</p>
            </div>
            <div class="col-12 p-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>
        </div>
    </div>
</div>
